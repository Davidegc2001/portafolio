---
import logo from "../assets/logo.png";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
const itemMenu = [
    {
        label: "Sobre m√≠",
        href: "/#about",
    },
    {
        label: "Experiencia",
        href: "/#experiencia",
    },
    {
        label: "Estudios",
        href: "/#estudios",
    },
    {
        label: "Habilidades",
        href: "/#habilidades",
    },
    {
        label: "Proyectos",
        href: "/#proyectos",
    },

    {
        label: "Contacto",
        href: "/#contacto",
    },
];
---

<div>
    <Astronav>
        <div class="flex justify-between px-5">
            <a> <img class="size-32" src={logo.src} alt="logo" /></a>
            <MenuIcon class="w-9 h-9 text-white" />
        </div>
        <!--
    // add `hidden` class by default for mobile
    // `lg:flex` is to make it visible in desktop
    // You may use custom CSS instead.
    -->
        <MenuItems class="hidden lg:flex justify-around items-center mt-2">
            <ul class="flex gap-x-7"></ul>
            {
                itemMenu.map((item) => (
                    <li class="text-gray-300 font-bold text-center ">
                        <a
                            class=" sm:text-xl hover:text-gray-600 transition-all"
                            href={item.href}
                        >
                            {item.label}
                        </a>
                    </li>
                ))
            }
        </MenuItems>
    </Astronav>
</div>
