---
import { profile } from "../data/profile";
import EmailIcon from "../components/icons/Email.astro";
import LinkedinIcon from "../components/icons/linkedIn.astro";
import GithubIcon from "../components/icons/github.astro";
import AddressIcon from "../components/icons/address.astro";
import PhoneIcon from "../components/icons/phone.astro";

const phone = "59501266";
const message = "Hola, me interesa tus servicios";
const encodedMessage = encodeURIComponent(message);
const whatsappUrl = `https://api.whatsapp.com/send?phone}&text=${encodedMessage}`;
const { headerStyles, sectionStyles } = Astro.props;
---

<section id="contacto" class={sectionStyles}>
    <h3 data-aos="fade-up" data-aos-delay="600" class={headerStyles}>
        Contacto
    </h3>
    <div
        data-aos="zoom-in"
        data-aos-delay="1000"
        class="max-w-2/4 pt-8 mx-auto"
    >
        <p class="text-amber-100 text-[16px] sm:text-xl my-9 text-center">
            Â¿Interesado en colaborar? No dudes en contactarme. Estoy disponible
            para proyectos freelance y nuevas oportunidades.
        </p>

        <a class="" href={profile.email}>
            <button
                data-aos="fade-down"
                data-aos-delay="1000"
                class="flex items-center gap-x-2 bg-blue-400 text-shadow-indigo-50 text-white font-bold px-4 py-2 rounded-lg cursor-pointer"
            >
                <EmailIcon /> Enviar un Correo</button
            ></a
        >

        <ul class="flex justify-around text-amber-400 py-12">
            <li>
                <a
                    class="hover:text-amber-50"
                    target="_blank"
                    rel="noopener noreferrer"
                    href="https://www.linkedin.com/in/david-guilarte-correa-382838305/"
                >
                    <LinkedinIcon />
                </a>
            </li>
            <li>
                <a
                    class="hover:text-amber-50"
                    target="_blank"
                    rel="noopener noreferrer"
                    href="https://github.com/Davidegc2001"
                    ><GithubIcon />
                </a>
            </li>
            <li>
                <a
                    class="hover:text-amber-50"
                    target="_blank"
                    rel="noopener noreferrer"
                    href="https://maps.app.goo.gl/cWP5cEKsAPtDtsjo7"
                >
                    <AddressIcon < a />
                    <li>
                        <a
                            class="hover:text-amber-50"
                            target="_blank"
                            rel="noopener noreferrer"
                            href={whatsappUrl}
                        >
                            <PhoneIcon < a />
                        </a>
                    </li>
                </a>
            </li>
        </ul>
    </div>
</section>
