---
import tattoStudio from "../../assets/projects/tattoo-studio.png";

const { name, description, tecnology, date, link } = Astro.props;
---

<div
    data-aos="flip-left"
    data-aos-easing="ease-out-cubic"
    data-aos-duration="1000"
    class="rounded-2xl max-w-3xl overflow-hidden glass-card dark:glass-card shadow-md transform transition-transform duration-200 hover:-translate-y-1 h-full flex flex-col"
>
    <div class="p-6">
        <img
            class="h-48 w-full rounded-t-lg object-cover"
            src={tattoStudio.src}
            alt="project-1"
        />

        <div class="p-6 text-left">
            <h4 class="text-xl text-white mb-2">
                {name}
            </h4>
            <p class="text-gray-300 text-[17px] flex-grow">
                {description}
            </p>
            <strong class="text-gray-400 text-[13px] flex-grow"
                >{tecnology}</strong
            >
            <p class="text-gray-400 text-[15px]">{date}</p>
        </div>
    </div>
</div>
<style>
    .dark {
        --bg: 17 24 39;
        --muted: 148 163 184;
        --glass: 17 24 39;
    }

    .glass-card {
        background-color: (--glass / 0.6);
        backdrop-filter: blur(6px);
    }
</style>
